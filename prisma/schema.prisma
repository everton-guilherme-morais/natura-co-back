datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            Int          @id @default(autoincrement())
  name          String
  imageCover    String
  images        Image[]
  stars         Int
  valueOfficial String
  valueInitial  String
  discount      Int
  category      String
  for           String
  description   String
  size          String? // nullable field
  comments      Int
  goodToKnow    GoodToKnow[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Image {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  image     String
}

model GoodToKnow {
  id          Int     @id @default(autoincrement())
  productId   Int
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  description String
}
