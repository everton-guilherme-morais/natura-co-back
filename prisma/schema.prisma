datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                Int          @id @default(autoincrement())
  name              String
  brand             String
  imageCover        String
  stars             Int
  discount          Int?
  category          String
  description       String
  size              String? // nullable field
  instalments       Int
  assessments       Assessment[]
  goodToKnow        GoodToKnow[]
  priceInitial      String
  priceWithDiscount String
  quantity          Int
  stateProduct      String?
  sex               String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}

model GoodToKnow {
  id          Int     @id @default(autoincrement())
  productId   Int
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  description String
}

model Assessment {
  id           Int      @id @default(autoincrement())
  productId    Int
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  name         String
  comment      String
  stars        Int
  dateCommment DateTime
}
