datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                Int          @id @default(autoincrement())
  name              String
  brand             String
  imageCover        String
  stars             Int
  discount          Int?
  category          String
  description       String
  size              String?
  instalments       Int
  assessments       Assessment[]
  goodToKnow        GoodToKnow[]
  priceInitial      String
  priceWithDiscount String
  quantity          Int
  stateProduct      String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  cartItems         Cart[]
}

model GoodToKnow {
  id          Int     @id @default(autoincrement())
  productId   Int
  description String
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Assessment {
  id           Int      @id @default(autoincrement())
  productId    Int
  name         String
  comment      String
  stars        Int
  dateCommment DateTime
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Cart {
  id        Int      @id @default(autoincrement())
  sessionId String   @db.VarChar(255)
  productId Int
  quantity  Int
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
